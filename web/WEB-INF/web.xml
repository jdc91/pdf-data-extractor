<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>MONGODB_HOST</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>MONGODB_PORT</param-name>
        <param-value>27017</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>TemplateUploadController</servlet-name>
        <servlet-class>com.data.extractor.controllers.TemplateUploadController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkUpTemplateRegionController</servlet-name>
        <servlet-class>com.data.extractor.controllers.MarkUpTemplateRegionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExtractPdfController</servlet-name>
        <servlet-class>com.data.extractor.controllers.ExtractPdfController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormPopulateController</servlet-name>
        <servlet-class>com.data.extractor.controllers.FormPopulateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCategoriesController</servlet-name>
        <servlet-class>com.data.extractor.controllers.ManageCategoriesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitController</servlet-name>
        <servlet-class>com.data.extractor.controllers.InitController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NavigationController</servlet-name>
        <servlet-class>com.data.extractor.controllers.NavigationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TemplateUploadController</servlet-name>
        <url-pattern>/TemplateUploadController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkUpTemplateRegionController</servlet-name>
        <url-pattern>/MarkUpTemplateRegionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExtractPdfController</servlet-name>
        <url-pattern>/ExtractPdfController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormPopulateController</servlet-name>
        <url-pattern>/FormPopulateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCategoriesController</servlet-name>
        <url-pattern>/ManageCategoriesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitController</servlet-name>
        <url-pattern>/InitController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NavigationController</servlet-name>
        <url-pattern>/NavigationController</url-pattern>
    </servlet-mapping>


</web-app>